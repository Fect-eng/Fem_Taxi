<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/content_inset"
    android:elevation="5dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/content_inset_half_card"
            android:clickable="true"
            android:contentDescription="Avatar"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_login_user"
            app:civ_circle_background_color="@color/overlay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_login_user"
            tools:ignore="ContentDescription,HardcodedText,VectorDrawableCompat" />

        <TextView
            android:id="@+id/txt_name_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:maxLines="1"
            android:text="nombre del cliente"
            android:textColor="@color/colorBlueLight"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_user"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_name_title"
            app:layout_constraintStart_toStartOf="@+id/txt_name_title"
            app:layout_constraintTop_toBottomOf="@+id/txt_name_title"
            tools:text="juanito los palotes" />

        <TextView
            android:id="@+id/txt_origin_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Origen"
            android:textColor="@color/colorBlueLight"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/txt_name"
            app:layout_constraintStart_toStartOf="@+id/txt_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_name" />

        <TextView
            android:id="@+id/txt_origin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="almas perdida 273"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_origin_title"
            app:layout_constraintStart_toStartOf="@+id/txt_origin_title"
            app:layout_constraintTop_toBottomOf="@+id/txt_origin_title" />

        <TextView
            android:id="@+id/txt_destino_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Destino"
            android:textColor="@color/colorBlueLight"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/txt_origin"
            app:layout_constraintStart_toStartOf="@+id/txt_origin"
            app:layout_constraintTop_toBottomOf="@+id/txt_origin" />

        <TextView
            android:id="@+id/txt_destino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_destino_title"
            app:layout_constraintStart_toStartOf="@+id/txt_destino_title"
            app:layout_constraintTop_toBottomOf="@+id/txt_destino_title"
            tools:text="juanito los palotes" />

        <TextView
            android:id="@+id/txt_calification_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="CalificaciÃ³n"
            android:textColor="@color/colorBlueLight"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/txt_destino"
            app:layout_constraintStart_toStartOf="@+id/txt_destino"
            app:layout_constraintTop_toBottomOf="@+id/txt_destino" />

        <TextView
            android:id="@+id/txt_calification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="almas perdida 273"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_calification_title"
            app:layout_constraintStart_toStartOf="@+id/txt_calification_title"
            app:layout_constraintTop_toBottomOf="@+id/txt_calification_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>