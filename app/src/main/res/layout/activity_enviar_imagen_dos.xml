<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    tools:context=".EnviarImagenDosActivity">

    <include layout="@layout/action_bar_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="367dp"
        android:layout_height="200dp"

        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/txtpenales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="DNI Primera Cara"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btnsubipena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUbir Imagen" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/fotopolicial"
            android:layout_width="367dp"
            android:layout_height="200dp"

            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textpenales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DNI Segunda Carta"
            android:textColor="#FFFFFF"
            />

        <Button
            android:id="@+id/btnsubirpolicia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUbir Imagen" />

    </LinearLayout>


    <Button
        android:id="@+id/btnnextimg"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginTop="40dp"
        android:text="Siguiente" />


</LinearLayout>