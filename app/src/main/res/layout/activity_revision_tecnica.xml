                android:layout_marginLeft="30dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/colorPrimary"
                tools:layout_editor_absoluteY="104dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
